# WHOOP API Configuration
WHOOP_API_KEY=your_whoop_api_key_here

# Fitbit OAuth + Webhooks (required for Fitbit integration)
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret
FITBIT_REDIRECT_URI=http://localhost:3001/api/wearables/fitbit/callback
# Public verification code configured in Fitbit Web API subscription settings
FITBIT_VERIFY_CODE=replace_with_random_verify_code
# Optional state signing secret (defaults to JWT_SECRET)
# FITBIT_STATE_SECRET=replace_with_random_state_secret
# Optional request/retry tuning
# FITBIT_MAX_RETRIES=4
# FITBIT_REQUEST_TIMEOUT_MS=15000
# FITBIT_DASHBOARD_MIN_SYNC_MS=300000
# FITBIT_NON_WEBHOOK_STALE_MS=1200000
# FITBIT_WEBHOOK_FALLBACK_STALE_MS=7200000
# FITBIT_HRV_STALE_MS=21600000

# Oura OAuth (required for Oura integration)
OURA_CLIENT_ID=your_oura_client_id
OURA_CLIENT_SECRET=your_oura_client_secret
OURA_REDIRECT_URI=http://localhost:3001/api/oura/callback
# Public HTTPS URL that Oura can call (e.g., https://your-domain.com/api/oura/webhook)
OURA_WEBHOOK_URL=
OURA_WEBHOOK_VERIFICATION_TOKEN=replace_with_random_secret
# Optional scopes override
# OURA_SCOPES=email personal daily heartrate workout session spo2Daily
# Optional webhook subscriptions override
# OURA_WEBHOOK_DATA_TYPES=daily_activity,daily_sleep,daily_readiness,sleep,workout,session,daily_stress,daily_spo2,daily_resilience,daily_cardiovascular_age,vo2_max
# OURA_WEBHOOK_EVENT_TYPES=create,update
# Optional safety margin under Oura's 5000 req / 5 min limit
# OURA_RATE_LIMIT_MAX=4800

# Garmin Connect Developer Program (requires approved Garmin access)
GARMIN_CLIENT_ID=
GARMIN_CLIENT_SECRET=
# OAuth2 defaults can be overridden if Garmin provides different tenant URLs
GARMIN_AUTH_URL=https://diauth.garmin.com/di-oauth2-service/oauth/authorize
GARMIN_TOKEN_URL=https://diauth.garmin.com/di-oauth2-service/oauth/token
GARMIN_API_BASE_URL=https://apis.garmin.com
GARMIN_REDIRECT_URI=http://localhost:3001/api/garmin/callback
# Scope is program-specific. Leave blank unless Garmin assigned scopes.
GARMIN_SCOPES=
# Optional webhook signing secret if configured in Garmin portal
GARMIN_WEBHOOK_SECRET=
# Optional: override header used for signature verification
# GARMIN_WEBHOOK_SIGNATURE_HEADER=x-garmin-signature
# Optional manual pull endpoints (comma-separated relative paths), if Garmin enables pull APIs for your app
# GARMIN_PULL_ENDPOINTS=/wellness-api/rest/dailies,/wellness-api/rest/epochs
# Conservative request budget when limits are undisclosed/throttled by Garmin
# GARMIN_RATE_LIMIT_MAX=900

# Server Configuration
PORT=3001
JWT_SECRET=replace_with_long_random_secret

# Twilio WhatsApp (optional - for WhatsApp integration)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_whatsapp_number
